{
  "ConnectionStrings": {
    "ServiceBusConnectionString": "Endpoint=sb://devpfm-tc1s-sbx-sbus.servicebus.windows.net/;Authentication=ManagedIdentity",
    "TaskDbConnectionString": "Server=tcp:devpfm-tc1s-sbx-shared-mssqlsrv.database.windows.net,1433;Database=Tasks;",
    "EventHubConnectionString": "devpfm-tc1s-sbx-evhn.servicebus.windows.net"
  },
  "TaskManagerConfiguration": {
    "ServiceBusQueueName": "task",
    "EventHubName": "360",
    "AuditEnabled": false
  },
  "EventGrid": {
    "TopicEndpoint": "https://devpfm-tc1s-sbx-domain.westeurope-1.eventgrid.azure.net/api/events"
  },
  "AuthorizationConfiguration": {
    "AccessRoleServiceEndpoint": "accessroles",
    "ClaimScopes": "TaskManager",
    "EnvironmentName": "Sandbox",
    "AuthScope": "api://internal-apps"
  },
  "General": {
    "ApiManagement": {
      "ApimBaseUrl": "https://apim.tc1s.my.fivedegrees.cloud",
      "TntInternalApiSubscriptionKey": ""
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ApplicationInsights": {
    "EnableAdaptiveSampling": false,
    "EnablePerformanceCounterCollectionModule": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "ApplicationName": "TaskManager.API"
    }
  },
  "AllowedHosts": "*"
}
